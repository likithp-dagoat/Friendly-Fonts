        <div class="grid">
            <div>
                <div class="char-box">a</div>
                <div class="char-label">a</div>
            </div>
            <div>
                <div class="char-box">b</div>
                <div class="char-label">b</div>
            </div>
            <div>
                <div class="char-box">c</div>
                <div class="char-label">c</div>
            </div>
            <div>
                <div class="char-box">d</div>
